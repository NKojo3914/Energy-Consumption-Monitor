generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  name     String
  readings Reading[]
  devices Device[]
  goals Goal[]
}

model Reading {
  id        String   @id @default(cuid())
  timestamp DateTime @default(now())
  value     Float
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Device {
  id        String   @id @default(cuid())
  name      String
  location  String?
  status    String   @default("offline")
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

model Goal {
  id        String   @id @default(cuid())
  targetKwh Float
  startDate DateTime
  endDate   DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

